<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/atom_ui_primary_color">
        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/atom_ui_common_cancel"
            android:textSize="@dimen/atom_ui_text_size_small"
            android:gravity="center"
            android:layout_marginLeft="@dimen/atom_ui_container_margin"
            android:layout_marginStart="@dimen/atom_ui_container_margin"
            android:textColor="@color/atom_ui_white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="请输入会话转移理由"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/atom_ui_text_size_small"
            android:textColor="@color/atom_ui_white"/>
        <TextView
            android:id="@+id/txt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/atom_ui_container_margin"
            android:layout_marginEnd="@dimen/atom_ui_container_margin"
            android:text="@string/atom_ui_common_confirm"
            android:gravity="center"
            android:textSize="@dimen/atom_ui_text_size_small"
            android:textColor="@color/atom_ui_white"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_content"
        android:gravity="start"
        android:layout_width="match_parent"
        android:background="@color/atom_ui_white"
        android:layout_height="200dp"
        android:maxLength="255"
        android:hint="最多可输入10行,255个字符"
        android:textColor="@color/atom_ui_light_gray_33"
        android:textSize="@dimen/atom_ui_text_size_small"
        android:maxLines="10"/>
</LinearLayout>
