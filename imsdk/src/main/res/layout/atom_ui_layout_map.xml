<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="192dip"
    android:layout_height="118dip"
    android:background="@drawable/atom_ui_conner_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="192dip"
        android:layout_height="118dip"
        android:layout_centerInParent="true"
        fresco:atom_imagecache_roundedCornerRadius="5dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="192dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:alpha="0.5"
        android:background="@drawable/atom_ui_location_bottom_radius"
        android:padding="5dp"
        android:textColor="@color/atom_ui_white"
        android:textSize="@dimen/atom_ui_text_size_micro" />
</RelativeLayout>