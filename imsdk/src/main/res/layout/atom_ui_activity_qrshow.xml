<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/atom_ui_trans_dark_gray">

    <FrameLayout
        android:layout_width="@dimen/atom_ui_image_size"
        android:layout_height="@dimen/atom_ui_image_size">

        <ImageView
            android:id="@+id/qr_show_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ProgressBar
            android:id="@+id/qr_loading"
            android:layout_width="@dimen/atom_ui_image_mid_size"
            android:layout_height="@dimen/atom_ui_image_mid_size"
            android:layout_gravity="center" />
    </FrameLayout>

</LinearLayout>