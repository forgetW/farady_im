<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/atom_ui_light_gray_f2"
    android:orientation="vertical">
    <include android:id="@+id/my_action_bar"
        layout="@layout/atom_ui_layout_new_action_bar"
        />
    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_action_bar"
        android:background="@color/atom_ui_light_gray_f2"
        android:numColumns="3"/>
    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/atom_ui_white"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/select_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/atom_ui_text_size_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/atom_ui_light_gray_33"
            android:layout_marginStart="@dimen/atom_ui_container_margin"
            android:layout_marginLeft="@dimen/atom_ui_container_margin"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/atom_ui_item_padding"
            android:textColor="@color/atom_ui_white"
            android:background="@drawable/atom_ui_negative_button_selector"
            android:text="@string/atom_ui_common_delete"
            android:textSize="@dimen/atom_ui_text_size_smaller"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/atom_ui_container_margin"
            android:layout_marginRight="@dimen/atom_ui_container_margin"/>
    </RelativeLayout>
</RelativeLayout>