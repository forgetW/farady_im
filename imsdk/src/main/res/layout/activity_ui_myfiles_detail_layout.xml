<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <include
        android:id="@+id/my_action_bar"
        layout="@layout/atom_ui_layout_new_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/my_action_bar"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/myfile_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/atom_ui_light_gray_33"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/myfile_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="文件"
            android:textSize="@dimen/atom_ui_text_size_medium" />

        <TextView
            android:id="@+id/myfile_detail_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="2.0MB" />

        <TextView
            android:id="@+id/myfile_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="12:00" />

        <TextView
            android:id="@+id/myfile_detail_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="hubo.hu" />

        <TextView
            android:id="@+id/myfile_detail_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:gravity="center"
            android:visibility="gone"
            android:text="该文件不支持在线预览，请下载后查看" />
        <TextView
            android:id="@+id/myfile_detail_tips"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:gravity="center"
            android:text="该文件不支持在线预览，请下载后查看" />


        <com.qunar.im.ui.view.progressbarview.NumberProgressBar
            android:id="@+id/number_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/atom_ui_container_margin"
            android:visibility="gone" />
    </LinearLayout>

`
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/myfile_detail_transfer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/atom_ui_common_button_white_select"
            android:gravity="center"
            android:text="@string/atom_ui_menu_translate" />

        <TextView
            android:id="@+id/myfile_detail_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/atom_ui_common_button_blue_selector"
            android:gravity="center"
            android:text="@string/atom_ui_btn_download_file"
            android:textColor="@color/atom_ui_white" />

    </LinearLayout>

</RelativeLayout>
