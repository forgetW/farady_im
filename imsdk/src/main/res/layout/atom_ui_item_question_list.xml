<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:background="@drawable/atom_ui_robot_question_list_bg"
        android:layout_height="234dp">
        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/titleImage"
                android:src="@drawable/atom_ui_robot_na"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <TextView
                android:layout_toLeftOf="@id/titleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="3"
                android:id="@+id/titleText"
                android:textColor="#212121"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="16dp"
                android:text="如何快速玩转QTalk，小拿带你上路～～"
                />


        </RelativeLayout>
        <ListView
            android:layout_below="@id/head"
            android:id="@+id/question_list"
            android:divider="@null"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/view_more"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@drawable/atom_ui_transparent_white_gradient"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#616161"
                android:text="查看更多"
                />
            <com.qunar.im.ui.view.IconView
                android:layout_marginLeft="5dp"
                android:id="@+id/left_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/atom_ui_ic_arrow_down"
                android:textColor="#616161"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>