<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:paddingLeft="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:background="#00000000">



        <com.qunar.im.ui.view.WorkWorldSpannableTextView
            android:id="@+id/comment_item_text"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:longClickable="true"
            android:maxLines="3"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/comment_item_like_layout"
            android:text="旺旺旺asadasdadada"
            android:layout_marginRight="15dp"
            android:textColor="#333333"
            android:textSize="14sp"
            fresco:emojiconTextOverideTouch="true"/>
        <LinearLayout
            android:id="@+id/comment_item_like_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/comment_item_like_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"

                android:text="99999"
                android:textColor="#999999"
                android:textSize="11sp" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="65dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <com.qunar.im.ui.view.emojiconTextView.EmojiconTextView
            android:id="@+id/comment_item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:enabled="true"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="这个是回复内容 说点什么吧"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>