<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/ll_tap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.qunar.im.ui.view.IconView
                android:id="@+id/iv_tab_icon"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <com.qunar.im.ui.view.tableLayout.widget.MsgView
                android:id="@+id/rtv_msg_tip"
                xmlns:mv="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_tab_icon"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="-10dp"
                android:textSize="10sp"
                android:visibility="visible"
                mv:mv_backgroundColor="#EB524A"
                mv:mv_isRadiusHalfHeight="true"
                mv:mv_strokeColor="#ffffff"
                mv:mv_strokeWidth="1dp"/>
        </RelativeLayout>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_tab_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="6sp"
            android:singleLine="true"/>
    </LinearLayout>

</RelativeLayout>