<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/atom_ui_container_margin">

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/tv_clear_chat_history"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginStart="@dimen/atom_ui_container_margin"
        android:gravity="center_vertical"
        android:text="@string/atom_ui_chat_clear_history"
        android:textSize="@dimen/atom_ui_text_size_medium"
        android:drawableRight="@drawable/atom_ui_ic_right_arrow"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:layout_marginEnd="@dimen/atom_ui_container_margin"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginStart="@dimen/atom_ui_container_margin"
        android:background="@color/atom_ui_dark_white"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_lookup_from_history"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginStart="@dimen/atom_ui_container_margin"
        android:gravity="center_vertical"
        android:text="@string/atom_ui_chat_search_history"
        android:textSize="@dimen/atom_ui_text_size_medium"
        android:drawableRight="@drawable/atom_ui_ic_right_arrow"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:layout_marginEnd="@dimen/atom_ui_container_margin"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginStart="@dimen/atom_ui_container_margin"
        android:background="@color/atom_ui_dark_white" />

    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_top_prority"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/atom_ui_container_margin"
            android:layout_marginStart="@dimen/atom_ui_container_margin"
            android:gravity="center_vertical"
            android:text="@string/atom_ui_chat_sticky_on_top"
            android:textSize="@dimen/atom_ui_text_size_medium" />

        <Switch
            android:id="@+id/switch_top_proity"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/atom_ui_container_margin"/>
    </RelativeLayout>
    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginStart="@dimen/atom_ui_container_margin"
        android:background="@color/atom_ui_dark_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dnd"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/atom_ui_container_margin"
            android:layout_marginStart="@dimen/atom_ui_container_margin"
            android:gravity="center_vertical"
            android:text="@string/atom_ui_chat_mute_notifications"
            android:textSize="@dimen/atom_ui_text_size_medium" />

        <Switch
            android:id="@+id/switch_dnd"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/atom_ui_container_margin"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginStart="@dimen/atom_ui_container_margin"
        android:background="@color/atom_ui_dark_white" />

    <RelativeLayout
        android:id="@+id/rl_show_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_shownick"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/atom_ui_container_margin"
            android:layout_marginStart="@dimen/atom_ui_container_margin"
            android:gravity="center_vertical"
            android:text="@string/atom_ui_chat_group_show_nickname"
            android:textSize="@dimen/atom_ui_text_size_medium" />

        <Switch
            android:id="@+id/switch_shownick"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/atom_ui_container_margin"/>
    </RelativeLayout>
</LinearLayout>
