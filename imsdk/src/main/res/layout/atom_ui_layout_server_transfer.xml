<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/from_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/atom_ui_light_gray_99"
        android:textSize="@dimen/atom_ui_text_size_small"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:paddingBottom="@dimen/atom_ui_item_padding"
        android:paddingTop="@dimen/atom_ui_item_padding"/>
    <TextView
        android:id="@+id/transfer_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/atom_ui_light_gray_99"
        android:textSize="@dimen/atom_ui_text_size_small"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:paddingBottom="@dimen/atom_ui_item_padding"
        android:paddingTop="@dimen/atom_ui_item_padding"/>
    <TextView
        android:id="@+id/history_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/atom_ui_light_gray_99"
        android:textSize="@dimen/atom_ui_text_size_small"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:paddingBottom="@dimen/atom_ui_item_padding"
        android:paddingTop="@dimen/atom_ui_item_padding"/>
    <TextView
        android:id="@+id/to_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/atom_ui_light_gray_99"
        android:textSize="@dimen/atom_ui_text_size_small"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:paddingBottom="@dimen/atom_ui_item_padding"
        android:paddingTop="@dimen/atom_ui_item_padding" />
    <TextView
        android:id="@+id/start_conv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/atom_ui_light_gray_33"
        android:textSize="@dimen/atom_ui_text_size_small"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:paddingBottom="@dimen/atom_ui_item_padding"
        android:visibility="gone"
        android:text="@string/atom_ui_start_conv"
        android:paddingTop="@dimen/atom_ui_item_padding" />
</LinearLayout>