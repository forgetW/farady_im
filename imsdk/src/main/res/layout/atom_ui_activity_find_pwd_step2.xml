<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/my_action_bar"
        layout="@layout/atom_ui_layout_new_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical">

        <EditText
            android:id="@+id/atom_ui_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/atom_ui_mobile_hint"
            android:padding="@dimen/dp_10"
            android:background="@color/translate"
            android:inputType="number"
            android:maxLength="11"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/atom_ui_light_gray_ee"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <EditText
                android:id="@+id/atom_ui_pic_code_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/atom_ui_pic_code_hint"
                android:padding="@dimen/dp_10"
                android:background="@color/translate"/>

            <ImageView
                android:id="@+id/atom_ui_pic_code_img"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_10"/>

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/atom_ui_light_gray_ee"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <EditText
                android:id="@+id/atom_ui_sms_code_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/atom_ui_sms_code_hint"
                android:padding="@dimen/dp_10"
                android:background="@color/translate"
                android:inputType="number"
                android:maxLength="6"/>

            <TextView
                android:id="@+id/atom_ui_get_sms_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_4"
                android:textColor="#00CABE"
                android:text="@string/atom_ui_get_verify_code"/>

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/atom_ui_light_gray_ee"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/atom_ui_button_height"
        android:layout_marginLeft="@dimen/atom_ui_container_margin"
        android:layout_marginRight="@dimen/atom_ui_container_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/atom_ui_common_button_green_selector"
        android:textSize="@dimen/atom_ui_text_size_medium"
        android:textColor="@color/atom_ui_white"
        android:text="@string/atom_ui_next_step"
        android:onClick="nextStep"/>

</LinearLayout>